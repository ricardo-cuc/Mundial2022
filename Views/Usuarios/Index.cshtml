@model IEnumerable<Mundial2022.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UApellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UCorreo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UPassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UPuntosTotales)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UApellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UCorreo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UPassword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UPuntosTotales)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UCodigo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UCodigo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UCodigo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
